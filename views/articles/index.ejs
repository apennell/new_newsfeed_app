<html>
<body>
	<h1><i>Daily Planet</i></h1>
	<h1>News</h1>
	<% articlesList.forEach(function(article) { %>
	<div>
	  <a href="/articles/<%= article.id %>"><strong><%= article.title%></strong></a>
	  <div>
	    <%= article.content %>
	  </div>
	  <br>
	</div>
	<% }) %>
